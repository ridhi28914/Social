<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="0dp"
    android:theme="@android:style/Theme.Light"
    android:layout_marginRight="0dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_profile"
            android:layout_marginTop="13dp" />


        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="false"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/tv_likes"
            android:layout_toRightOf="@+id/tv_likes"
            android:textColor="@color/tw__composer_black"
            android:textSize="15sp"
            android:textStyle="bold" />
        <!--android:layout_toEndOf="@+id/tv_caption"
            android:layout_above="@+id/tv_caption"
            android:layout_toRightOf="@+id/tv_caption" -->

        <TextView
            android:id="@+id/tv_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/iv_heart"
            android:layout_toRightOf="@+id/iv_heart"
            android:textColor="@color/tw__composer_black"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_image"
            android:scaleType="centerCrop"
            android:src="@drawable/instaheart" />

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv_image"
            android:layout_toEndOf="@+id/tv_username"
            android:scaleType="centerCrop"
            android:src="@drawable/instacomment" />

        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/iv_comment"
            android:layout_toRightOf="@+id/iv_comment"
            android:textColor="@color/tw__composer_black"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tv_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_heart"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:textStyle="italic" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
