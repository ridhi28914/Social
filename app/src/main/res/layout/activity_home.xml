<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Integrate"
        android:id="@+id/integrate"/>
    <!--<TextView-->
        <!--android:id="@+id/textView1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_horizontal"-->
        <!--android:textAppearance="?android:attr/textAppearanceLarge" />-->

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitter_login_button"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="120dp"
        android:adjustViewBounds="true"
        android:autoText="false"
        android:paddingTop="100dp"
        android:scaleType="fitCenter"
        android:textAllCaps="false"
        android:textSize="6sp" />

    <ImageButton
        android:id="@+id/pinterest_login"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/pin11"
        android:background="@drawable/curved"
        android:scaleType="centerCrop"
        android:textAllCaps="false" />

    <ImageButton
        android:id="@+id/instagram_button"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/insta11"
        android:background="@drawable/curved"
        android:scaleType="centerCrop"
        android:textAllCaps="false"
        />

        <!--android:text="Log in with Instagram"-->

    <com.facebook.login.widget.LoginButton xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login_button"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.03"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        facebook:com_facebook_login_text="Log in with Facebook" />
    <TextView
        android:id="@+id/data_received_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="false" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />
</LinearLayout>